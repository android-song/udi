<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f0f2f5"
    android:layout_marginBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clipToPadding="true"
        android:background="#f50606"
        android:layout_height="?attr/actionBarSize">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:gravity="center_vertical|left" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="完善个人资料"
            android:layout_marginLeft="-24dp"
            android:textColor="#fdfafa"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/textView"
            />
    </LinearLayout>

    <LinearLayout
       style="@style/Register_bg"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"

            android:text="学号："
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_height="match_parent" />
        <EditText
            android:inputType="number"
            style="@style/Register"
            android:hint="请输入学号"

            android:id="@+id/register_number"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/input_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       style="@style/Register_bg">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="姓名："
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/stu_name"
            android:inputType="number"
            android:hint="姓名"
            style="@style/Register" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@drawable/input_bg"
        android:layout_height="0dp"
       style="@style/Register_bg">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="昵称："
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_height="match_parent" />
    <EditText
        android:id="@+id/register_nickname"
        android:hint="昵称"
        style="@style/Register" />
</LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@drawable/input_bg"
        android:layout_height="0dp"
     style="@style/Register_bg">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="性别："
            android:drawableRight="@drawable/ic_expand_more_black_24dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <Spinner
            android:id="@+id/register_sex"
            android:hint="性别"

            android:entries="@array/sex"
            style="@style/Register" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/input_bg"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/Register_bg">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/ic_expand_more_black_24dp"
        android:text="学校："
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_height="match_parent" />
    <Spinner
        android:id="@+id/register_phone"
        android:hint="邮箱/手机号"
        android:entries="@array/school"
        style="@style/Register"/>
</LinearLayout>



            <Button
                android:id="@+id/persion_registed"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="下一步"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="@drawable/shap_register"
                android:layout_weight="1"
                android:layout_height="0dp" />

    <View
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"></View>
</LinearLayout>