<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:clipToPadding="true"
        android:background="#f50606"
        android:layout_height="?attr/actionBarSize">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:gravity="center_vertical|left" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="密码登录"
            android:layout_marginLeft="-24dp"
            android:textColor="#fdfafa"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/textView"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/now"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shap"
        android:text="手机短信验证登录 "
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/input_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/custom_phone"
            android:paddingLeft="10dp"
            android:hint="请输入手机号码？"
            android:drawablePadding="5dp"
            android:background="@null"
            android:layout_weight="1"
            android:drawableLeft="@drawable/login_icon_account"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <View
            android:layout_width="match_parent"
            android:background="#efeded"
            android:layout_height="1dp"></View>
        <EditText
            android:id="@+id/custom_number"
            android:paddingLeft="10dp"
            android:hint="请输入验证码!"
            android:password="true"
            android:background="@null"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/login_icon_password"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/custom_btn"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="获取验证码"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/shap_go"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/custom_next"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:background="@drawable/shap_order"
            android:textColor="#fdfbfb"
            android:text="登录"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:paddingLeft="5dp"
            android:text="已阅读同意协议书"
            android:textColor="#6a8af1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:checked="true"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>