<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#dfdede"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <include layout="@layout/persion_one"></include>
    <Space
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#dfdede"></Space>
    <LinearLayout
        android:background="#e7e5e5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/persion_item1"
        android:background="#fffcfc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <ImageView
        android:id="@+id/user_img"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/icon_cart"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <TextView
        android:text="更改信息"
        android:id="@+id/user_text"
        android:textColor="#000000"
        android:drawableRight="@android:drawable/ic_media_ff"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_height="match_parent" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdede"></View>
    <LinearLayout
        android:id="@+id/persion_item2"
        android:background="#fffcfc"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/user_img1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_user"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="取件历史"
            android:id="@+id/user_text1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:drawableRight="@android:drawable/ic_media_ff"
            android:gravity="center_vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_height="match_parent" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdede"></View>
    <LinearLayout
        android:id="@+id/persion_item3"
        android:background="#fffcfc"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/user_img2"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/icon_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="我发布的"
            android:id="@+id/user_text2"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            android:drawableRight="@android:drawable/ic_media_ff"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_height="match_parent" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdede"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#dfdede"></Space>
    <LinearLayout
        android:id="@+id/persion_item4"
        android:background="#fffcfc"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/user_img3"
            android:layout_weight="1"
            android:src="@mipmap/icon_home"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="系统通知"
            android:id="@+id/user_text3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:drawableRight="@android:drawable/ic_media_ff"
            android:gravity="center_vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_height="match_parent" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdede"></View>
    <LinearLayout
        android:id="@+id/persion_item5"
        android:background="#fffcfc"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/user_img4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:src="@mipmap/icon_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="邀请朋友一起使用U递"
            android:id="@+id/user_text4"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@android:drawable/ic_media_ff"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_height="match_parent" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdede"></View>
    </LinearLayout>

    </LinearLayout>